<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <h1>Categorias dos Princípios de Influência</h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Mostrar', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Excluir', category, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir esta categoria?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova Categoria', new_category_path %> |
  <%= link_to 'Voltar', root_path %>

  <!-- container end -->
</div>
